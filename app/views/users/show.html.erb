<% provide(:title, @user.user_name)%>
<div id="pagewrap">	
	
	<p id="notice"><%= notice %></p>
		
		<%= form_for(@user) do |f| %>
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
		      <ul>
		      <% @user.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		<% end %>



	<div class="wrapper grid2">	
		<div class="col">
			<div id="vertical-line-right">
				<ul>
					<li>
						<h2>Profiel</h2>
					</li>
					<li>
						<%= image_tag @user.avatar_url(:thumb), :class => "avatar" if @user.avatar? %>
					</li>
					<li class="center">
						<%= link_to 'Badges', :class => "button" %>
					</li>
					<li class="center">
						<h3><small class="green">Gebruikersnaam</small><br />
							<%= @user.user_name %></h3>
					</li>
					<li class="center">
						<h3><small class="green">Model</small><br />
					    Opel Ampera</h3>
					</li>
					<li class="center">
						<h3><small class="green">Kenteken</small><br />
					    <%= @user.license_plate %></h3>
					</li>
					
				</ul>
			</div>

		
	
		
							<!-- <%= link_to 'Terug', :root %> -->
		</div>
	
	
		<div class="col">
			
			<ul>
				<li class="right">
					<%= link_to 'Bewerken', edit_user_path(@user), :class => "button_small" %>
				</li>
				<li class="left">
				 	<h3><small class="green">Voornaam</small><br />
						<%= @user.first_name %></h3>
				</li>
				<li class="left">
				    <h3><small class="green">Achternaam</small><br />
						<%= @user.last_name %></h3>
				</li>
				<li class="left">
					<h3><small class="green">E-mail</small><br />
						<%= mail_to @user.email, @user.email %></h3>
				</li>
				<li class="left">
				  	<h3><small class="green">Geboortedatum</small><br />
				    	<%= @user.birthday %></h3>
				</li>
				
					
					
			
				
			
			
			   
							
			</ul>
		</div>
	</div>
	
	<div id="chart_div" data-miles="<%= @miles.to_json %>" style="width:500px; height:250px"></div>
	<div id="chart_div2" style="width:500px; height:250px"></div>
	<div id="chart_div3" data-battery="<%= @battery.to_json %>" style="width:500px; height:250px"></div>
</div>



	


