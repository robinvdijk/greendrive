<p id="notice"><%= notice %></p>
	

<!--Used to show avatar  -->

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<div id="left_profile">
	<div id="left_profile_content">		
		<%= image_tag @user.avatar_url(:thumb) if @user.avatar? %>
	
	  	<h1 id="username"><%= @user.user_name %></h1>

		<div class="button">
		<%= link_to 'Bewerken', edit_user_path(@user) %> </div>
		
		<div class="button">
		<%= link_to "Badges" %>	</div>
		
	  	<strong>Kenteken:</strong>
	    <%= @user.license_plate %>
	
		<%= link_to 'Terug', :root %>
	</div>
</div>

<div id="right_profile">
	
 	<strong>Email:</strong>
  	<%= mail_to @user.email, @user.email %><br />
	 
  	<strong>Voornaam:</strong>
   	<%= @user.first_name %><br />
   
  	<strong>Achternaam:</strong>
    <%= @user.last_name %><br />

    <strong>Geboortedatum:</strong>
    <%= @user.birthday %>	<br />
</div>




	


