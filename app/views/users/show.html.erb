
<% provide(:title, @user.user_name)%>
<div id="pagewrap">	
	<div class="profile_border">
		<div class="wrapper grid2">	
			<div class="col">
				<div id="vertical-line-right">
					<ul>
						<li>
							<h2>Profiel</h2>
						</li>
						<li>
							<% if @user.avatar? %>
								<%= image_tag @user.avatar_url(), :class => "avatar" %>
							<% else %>
								<%= image_tag("avatar.png", :alt => "default-avatar", :class => "avatar") %>
							<% end %>
						</li>
						<li class="center">
							<strong class="green">Gebruikersnaam</strong><br />
								<%= @user.user_name %>
						</li>
						<li class="center">
							<strong class="green">Model auto</strong><br /><%= @car.model %>
						</li>
						<li class="center">
							<strong class="green">Kenteken</strong><br /><%= @car.license_plate %>
						</li>
						<!-- <li class="center">
							<h3><%= link_to 'Badges', :class => "button" %></h3>
						</li> -->			
					</ul>
				</div>
					
			</div>

			<div class="col">
				<ul>
					<% if can? :update, @user %>
					<li class="right">
						<%= link_to 'Bewerken', user_name_edit_path(@user.user_name), :class => "button_small" %>
					</li>
					<% end %>
			
					<li class="left">
						<strong class="green">Naam</strong><br />
							<%= @user.first_name %> <%= @user.middle_name%> <%= @user.last_name %>
					</li>
					<li class="left">
						<strong class="green">E-mail</strong><br />
							<%= mail_to @user.email, @user.email %>
					</li>
					<li class="left">
					  	<strong class="green">Geboortedatum</strong><br />
					  		<% if @user.birthday.blank? %>
					  			<p>Er is geen geboortedatum ingevuld.</p>
					  		<% else %>
					    		<%= @user.birthday.strftime("%e-%-m-%Y")%>
					    	<% end %>
					</li>
						
				</ul>		
		</div>
	</div>
</div>

