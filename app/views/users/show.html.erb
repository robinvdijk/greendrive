<% provide(:title, @user.user_name)%>
<div id="pagewrap">	
	<p id="notice"><%= notice %></p>
		
		<%= form_for(@user) do |f| %>
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
		      <ul>
		      <% @user.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		<% end %>


		

	<div class="wrapper grid2">	
		<div class="col">
			<div id="vertical-line-right">
				<ul>
					<li>
						<h2>Profiel</h2>
					</li>
					<li>
						<%= image_tag @user.avatar_url(:thumb), :class => "avatar" if @user.avatar? %>
					</li>
					<li class="center">
						<h3><small class="profile">Gebruikersnaam</small><br />
							<%= @user.user_name %></h3>
					</li>
					<li class="center">
						<h3><small class="profile">Model</small><br />
					    Opel Ampera</h3>
					</li>
					<li class="center">
						<h3><small class="profile">Kenteken</small><br />
					    <%= @user.license_plate %></h3>
					</li>
					<li class="center">
						<h3><%= link_to 'Badges', :class => "button" %></h3>
					</li>
				</ul>
			</div>
		</div>
	
	
		<div class="col">
			<div id="profile_info">
				
				 	<h3><small class="profile">Voornaam</small><br />
						<%= @user.first_name %></h3>

			  	
				    <h3><small class="profile">Achternaam</small><br />
						<%= @user.last_name %></h3>
				
					<h3><small class="profile">E-mail</small><br />
						<%= mail_to @user.email, @user.email %></h3>

				  	<h3><small class="profile">Geboortedatum</small><br />
				    	<%= @user.birthday %></h3>
				
					
					<%= link_to 'Bewerken', edit_user_path(@user), :class => "button float-bottom" %>
				</div>
				
			
			
		</div>
	</div>
	
</div>



	


