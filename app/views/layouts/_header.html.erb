<% unless controller == "pages#homepage" %>
	

	<div class="header">
		
		<% if controller_name == "sessions"  || controller_name == "password_resets" %>
			<div id="pagewrap">
				<ul class="nav">
					<li class="home">
						<%= link_to image_tag("header_logo_white.svg"), root_path %>
					</li>
				</ul>
			</div>
			
		<% else %>
		
		

		<div id="pagewrap">

			<ul class="nav">
				<li class="home">
					<%= link_to image_tag("header_logo_white.svg"), root_path, :class => "logo_effect"%>
				</li>
				
				<li class="icons_header" id="help_header">
					<%= image_tag("help.svg")%>
					<ul>
						<% if controller_name == 'dashboards' %>
							<li><a href="#" id='help'>Tutorial</a></li>
						<% end %>
						<li><%= link_to 'FAQ', faq_path %></li>
						<li><%= link_to 'Contact', contact_path %></li>
					</ul>
				</li>		
						
				<li class="icons_header">
					<%= image_tag("menu.png", :alt => "menu") %>
				  <% if current_user %>
						<ul>
							<li><%= link_to "Dashboard", root_path %></li>
							
							<li><%= link_to "Badges", user_name_badges_path(current_user.user_name) %></li>
							
				 		   	<li><%= link_to "Mijn profiel", user_name_path(current_user.user_name) %></li>

				   		    <li><%= link_to "Leaderboards", user_name_leaderboard_path(current_user.user_name) %></li>

				    	    <li><%= link_to "Uitloggen", logout_path, :method => :delete %></li>			
				    </ul>

					<% end %>
				</li>
				

				<li class="icons_header">
					<%= form_tag ("/search_results"), :method => "get", :class=>"navbar-form" do %>
        				<%= text_field_tag ("search"), params[:search], :class => 'search-input span2', :placeholder => 'Zoek naar gebruikers...' %>&nbsp
       					<%= image_submit_tag("search.png") %></li></ul>
    				<% end %>
				</li>
			</ul>
    				

				
			</ul>

		
		</div>
		<% end %>
		
<% end %>
		
		
		
	
	<!-- <%= link_to "Gebruikers", users_path %> -->

	</div>



